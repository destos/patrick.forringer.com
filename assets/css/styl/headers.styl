// Header

.basic-header
    // NOTE: Background images are set within the HTML using inline CSS!
    background: no-repeat center center
    background-color: $brand-primary
    background-attachment: scroll
    background linear-gradient(top, lighten($brand-primary, 30%), $brand-primary)
    background-size: cover
    margin-bottom: 20px
    .heading
        color: white
        h1
        h2
          font-weight: 300


.important-header
    @extend .basic-header

    // TODO may have to change page heading
    .intro-heading
        text-align: center
        padding: 100px 0 50px
        @media only screen and (min-width: 768px)
            padding: 150px 0
        h1
            margin-top: 0
            font-size: 50px

        .subheading
            font-size: 24px
            line-height: 1.1
            display: block
            sans-serif()
            font-weight: 300
            margin: 10px 0 0

        @media only screen and (min-width: 768px)
            h1
                font-size: 80px

    .post-heading
        padding: 60px 0 30px
        @media only screen and (min-width: 768px)
            padding: 100px 0
        h1
            font-size: 30px

        .subheading,
        .meta
            line-height: 1.1
            display: block

        .subheading
            sans-serif()
            font-size: 24px
            margin: 10px 0 30px
            font-weight: 600

        .meta
            serif()
            font-style: italic
            font-weight: 300
            font-size: 20px
            a
                color: white


        @media only screen and (min-width: 768px)
            h1
                font-size: 55px
            .subheading
                font-size: 30px


.sub-header
    @extend .basic-header
    padding-top 66px
    padding-bottom 15px
