// -- Typography
@require "variables.styl"
@require "mixins.styl"

h1,
h2,
h3,
h4,
h5,
h6
    sans-serif()
    font-weight: 700

a
    color: $brand-primary
    // text-decoration: underline
    &:hover,
    &:focus
        color: darken($brand-primary, 25%)


// Show zoom in cursor when hovering over a link with an image.
// TODO: inspect href and onyl dispaly if linking to another image
a img
    &:hover,
    &:focus
        cursor: zoom-in


blockquote
    color: $gray
    font-style: italic

hr.small
    max-width: 100px
    margin: 15px auto
    border-width: 4px
    border-color: white
