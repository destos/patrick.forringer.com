// Button Styles

.btn
    sans-serif()
    text-transform: uppercase
    font-size: 14px
    font-weight: 800
    letter-spacing: 1px
    border-radius: 1px
    padding: 15px 25px
    color: black

.btn-lg
    font-size: 16px
    padding: 25px 35px

.btn-default
    &:hover,
    &:focus
        background-color: $brand-primary
        border: 1px solid $brand-primary
        color: white
    &.disabled
        color: $gray
        background-color: $gray-dark
        cursor: not-allowed

