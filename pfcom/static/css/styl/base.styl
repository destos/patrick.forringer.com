@import 'nib'
@require 'variables.styl'
@require "mixins.styl"

// Global Components

body
    serif()
    font-size: 20px
    color: $gray-dark


// Navigation

.navbar-custom
    position: absolute
    top: 0
    left: 0
    width: 100%
    z-index: 3
    sans-serif()
    .navbar-brand
        font-weight: 800

    .nav.navbar-nav
        > li
            > a
                text-transform: uppercase
                font-size: 12px
                font-weight: 800
                letter-spacing: 1px
        > .open
            > a
                background: $white-faded


    @media only screen and (min-width: 768px)
        background: transparent
        border-bottom: 1px solid transparent
        .navbar-brand
            color: white
            padding: 20px
            &:hover,
            &:focus
                color: $white-faded

        .nav
            > li
                > a
                    color: white
                    padding: 20px
                    &:hover,
                    &:focus
                        color: $white-faded


    @media only screen and (min-width: 1170px)
        transition: background-color 0.3s
        /* Force Hardware Acceleration in WebKit */
        transform: translate3d(0, 0, 0)
        backface-visibility: hidden
        &.is-fixed
            /* when the user scrolls down, we hide the header right above the viewport */
            position: fixed
            top: -61px
            background-color: transparentify(white, 90%)
            border-bottom: 1px solid darken(white, 5%)
            transition: transform 0.3s
            .navbar-brand
                color: $gray-dark
                &:hover,
                &:focus
                    color: $brand-primary
            .nav
                > li
                    > a
                        color: $gray-dark
                        &:hover,
                        &:focus
                            color: $brand-primary

        &.is-visible
            /* if the user changes the scrolling direction, we show the header */
            transform: translate3d(0, 100%, 0)

// Header

.basic-header
    // NOTE: Background images are set within the HTML using inline CSS!
    background: no-repeat center center
    background-color: $brand-primary
    background-attachment: scroll
    background linear-gradient(top, lighten($brand-primary, 30%), $brand-primary)
    background-size: cover
    margin-bottom: 20px
    .heading
        color: white
        font-weight: 200


.important-header
    @extend .basic-header

    // TODO may have to change page heading
    .intro-heading
        text-align: center
        padding: 100px 0 50px
        @media only screen and (min-width: 768px)
            padding: 150px 0
        h1
            margin-top: 0
            font-size: 50px

        .subheading
            font-size: 24px
            line-height: 1.1
            display: block
            sans-serif()
            font-weight: 300
            margin: 10px 0 0

        @media only screen and (min-width: 768px)
            h1
                font-size: 80px

    .post-heading
        padding: 50px 0 50px
        @media only screen and (min-width: 768px)
            padding: 100px 0
        h1
            font-size: 30px

        .subheading,
        .meta
            line-height: 1.1
            display: block

        .subheading
            sans-serif()
            font-size: 24px
            margin: 10px 0 30px
            font-weight: 600

        .meta
            serif()
            font-style: italic
            font-weight: 300
            font-size: 20px
            a
                color: white


        @media only screen and (min-width: 768px)
            h1
                font-size: 55px

            .subheading
                font-size: 30px


.sub-header
    @extend .basic-header
    padding-top 66px
    padding-bottom 15px


